<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Account Button and Text -->

    <ImageButton
        android:id="@+id/btn_account"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="44dp"
        android:background="@color/white"
        android:contentDescription="账户"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_docadd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="111dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:text="账户"
        android:textSize="40sp"
        app:layout_constraintStart_toEndOf="@id/btn_account"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_budget"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="228dp"
        android:background="@color/white"
        android:contentDescription="预算"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_editor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="111dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="260dp"
        android:text="预算"
        android:textSize="40sp"
        app:layout_constraintStart_toEndOf="@id/btn_budget"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_financerecord"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="408dp"
        android:background="@color/white"
        android:contentDescription="交易记录"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="135dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="420dp"
        android:singleLine="false"
        android:text="交易记录"
        android:textSize="40sp"
        app:layout_constraintStart_toEndOf="@id/btn_financerecord"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/bottom_buttons1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_home1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="主页"
            android:gravity="center"
            android:textSize="14sp"
            android:padding="10dp"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btn_profile1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="我的"
            android:gravity="center"
            android:textSize="14sp"
            android:padding="10dp"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@android:color/black" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
